{
    "layer": "top",
    "position": "top",
    //"modules-left": ["hyprland/workspaces"],
    "modules-center": ["network", "tray", "wireplumber", "backlight", "battery", "clock", "custom/notification"],
    "custom/notification": {
	"tooltip": false,
	"format": "{icon}",
	"format-icons": {
	"notification": "<span foreground='red'><sup></sup></span>",
	"none": "",
	"dnd-notification": "<span foreground='red'><sup></sup></span>",
	"dnd-none": "",
	"inhibited-notification": "<span foreground='red'><sup></sup></span>",
	"inhibited-none": "",
	"dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
	"dnd-inhibited-none": ""
	},
	"return-type": "json",
	"exec": "swaync-client -swb",
	"on-click": "sleep 0.135 && swaync-client -t -sw ",
	"on-click-right": "sleep 0.135 && swaync-client -d -sw ",
	"escape": true
    },
    "hyprland/workspaces": {
	"format": "{name}: {icon}",
	"format-icons": {
		"1": "",
		"2": "",
		"3": "",
		"4": "",
		"5": "",
		"active": "",
		"default": ""
	},
    },
    "tray": {
	"icon-size": 18,
	"spacing": 10
    },
    "clock": {
	"timezone": "Asia/Singapore",
        "format": "  {:%I:%M %p}  ",
        "format-alt": " {:%a %b %d}  ",
        "tooltip": false
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "bat":"BAT1",
        "design-capacity": false,
	"format": "{capacity}% {icon}",
        "format-charging": "  {capacity}%",
        "format-plugged": "  {capacity}%",
        //"format-discharging": "  {capacity}%",
	"interval": 1,
        "format-alt": "{power:.2f} W",
        "format-icons": [" ", " ", " ", " ", " "]
    },
    "network": {
        "format": "{ifname}",
        "format-wifi": "    {essid}  ",
        "format-ethernet": "   {ifname}",
        "format-disconnected": " Disconnected ",
        //"tooltip-format-wifi": "{signalStrength}%",
        "max-length": 20
    },
    "custom/media": {
        "format": "{}",
        "interval": 1,
        "exec": "$HOME/.config/waybar/get_media.sh"
    },
    "custom/keyboard": {
        "format": "  {}",
        "interval": 1,
        "exec": "$HOME/.config/waybar/get_kbdlayout.sh"
    },
    "backlight": {
	"device": "intel_backlight",
	"format": " {percent}% {icon}",
	"format-icons": ["󰃟 ", "󰃠 "]
    },
    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}",
        "format-muted": "",
        "format-icons": {
            "headphone": " ",
            "hands-free": " ",
            "headset": " ",
            "phone": " ",
            "portable": " ",
            "car": " ",
            "default": ["", " "]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },
    "custom/quit": {
        "format": "",
        "on-click": "swaynag -f 'Terminus (TTF)'  -t warning -m 'Do you really want to exit sway?' -b 'Yes, exit sway' 'swaymsg exit'"
    }
}
